root = true

[*]
end_of_line = lf
charset = utf-8

[{*.js,*.ts,*.jsx,*tsx}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = false

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2